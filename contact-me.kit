<!DOCTYPE html>
<html lang="pt">
  <head>
    <title>Gab Tonini | CONTACT</title>

    <!-- @import components/head-->
  </head>

  <body>
    <header>
      <div class="container">
        <div class="header-container">
          <div class="logo"><a href="./index.html">Gab Tonini</a></div>
          <nav>
            <ul>
              <li>
                <a href="./work.html">Work</a>
              </li>
              <li>
                <a href="./about.html">About</a>
              </li>
              <li>
                <a href="./contact-me.html" class="active-page">Contact</a>
              </li>
            </ul>
          </nav>
          <button
            class="menu-button"
            onclick="openMenu()"
            aria-label="Mobile menu button"
          >
            <img alt="Mobile menu icon" src="./assets/icons/menu.svg" />
          </button>
        </div>
      </div>
    </header>

    <!-- @import components/mobile-menu-->

    <section class="pt-2 mb-2">
      <div class="container">
        <h2 class="section-title">
          <img
            alt="Icon of a eight pointed star"
            src="./assets/icons/title-icon.svg"
          />
          <span>Contact</span>
        </h2>
        <div class="responsive-grid-50-50 mt-1 mb-2">
          <div>
            <h3 class="contact-title font-w-400">
              Let's talk <br />
              about it
            </h3>
          </div>
          <div>
            <p class="font-w-200">
              Let's connect and build a meaningful professional relationship.
              Drop me a line, and let's explore how we can support each other.
            </p>
          </div>
        </div>
        <form class="contact-form">
          <div>
            <div class="text-input-group">
              <label for="input-email">Email</label>
              <div class="input-container">
                <input id="input-email" type="text" placeholder="Your Email" />
                <img src="assets/icons/mail-icon.png" />
              </div>
              <span class="error-message"></span>
            </div>

            <div class="text-input-group">
              <label for="input-name">Full Name</label>
              <div class="input-container">
                <input id="input-name" type="text" placeholder="Your Name" />
                <img src="assets/icons/user-icon.png" />
              </div>
              <span class="error-message"></span>
            </div>
          </div>
          <div>
            <div class="text-input-group">
              <label for="input-message">Message</label>
              <div class="textarea-container">
                <textarea
                  id="input-message"
                  rows="6"
                  placeholder="Enter your message"
                ></textarea>
              </div>
              <span class="error-message"></span>
            </div>
            <button
              onclick="sendMessage()"
              class="primary-button"
              type="button"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </section>

    <section>
      <div class="container">
        <h2 class="section-title">
          <img
            alt="Icon of a eight pointed star"
            src="./assets/icons/title-icon.svg"
          />
          <span>Contact Me</span>
        </h2>
        <div class="section-content">
          <div class="responsive-grid-50-50">
            <div>
              <p class="section-description color-primary">
                It's time to talk about your project
              </p>
            </div>
            <div>
              <div class="contact-info mb-1">
                <span>Email</span>
                <span>gabrielatonini08@gmail.com</span>
              </div>
              <div class="contact-info">
                <span>Whatsapp</span>
                <span>+351 933 375 469</span>
              </div>
              <div class="divider"></div>

              <ul class="contact-section-links">
                <li>
                  <a
                    class="default-link"
                    href="https://www.behance.net/Gbtonini"
                    target="_blank"
                  >
                    Behance
                    <img
                      alt="Arrow icon pointing to upper left corner"
                      src="./assets/icons/link-arrow.png"
                    />
                  </a>
                </li>
                <li>
                  <a
                    class="default-link"
                    href="https://www.instagram.com/gbtonini/"
                    target="_blank"
                  >
                    Instagram
                    <img
                      alt="Arrow icon pointing to upper left corner"
                      src="./assets/icons/link-arrow.png"
                    />
                  </a>
                </li>
                <li>
                  <a
                    class="default-link"
                    href="https://www.linkedin.com/in/gbtonini/"
                    target="_blank"
                  >
                    LinkedIn
                    <img
                      alt="Arrow icon pointing to upper left corner"
                      src="./assets/icons/link-arrow.png"
                    />
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- @import components/footer-->
  </body>
</html>
